<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkPlusP2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WorkPlusP2"
    xmlns:startupPages="clr-namespace:WorkPlusP2.Views.Startup"
    xmlns:dashboardPages="clr-namespace:WorkPlusP2.Views.Dashboard">

    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate startupPages:LoginPage}"
        Route="LoginPage"/>

    <FlyoutItem>
        <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate dashboardPages:DashboardPage}"
        Route="DashboardPage"/>
    </FlyoutItem> 
    
</Shell>
 